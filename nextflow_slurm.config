manifest {
    homePage = 'https://gitlab.pasteur.fr/aghozlan/annot_vp1'
    description = 'Assembly and annotation of viral particules'
    mainScript = 'annot_virus_2.nf'
}

process {
    executor='slurm'
    queue = 'common'
    clusterOptions='--qos=fast'
    beforeScript ='source /local/gensoft2/adm/etc/profile.d/modules.sh;module use /pasteur/projets/policy01/Matrix/modules;export PYTHONPATH=/pasteur/projets/policy01/Matrix/metagenomics/python-lib/lib/python2.7/site-packages:$PYTHONPATH;export LD_LIBRARY_PATH=/pasteur/projets/policy01/Matrix/metagenomics/htslib/lib:$LD_LIBRARY_PATH'
    module= 'blast+/2.2.40:Python/2.7.8:SPAdes/3.10.0:AlienTrimmer/0.4.0:bowtie2/2.2.9:khmer/2.0:clc-assembly-cell/5.0.0:bwa/0.7.7:dsrc/2.0:mbma/nextflow:openmpi/2.0.1:Ray/2.3.1'
    errorStrategy = 'retry'
}

executor {
    name = 'slurm'
    queueSize = 50
}

timeline.enabled = true
//trace.enabled = true
//dag.enabled = true

